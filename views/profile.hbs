

    <div class="container mt-4">
        <div class="row">
            <div class="col-4">
                <div class="card" >
                    <div class="avatar-ctn">
                        {{#if img}}
                                <img src="/victim/{{img}}" class="avatar" alt="user profile picture">
                            {{else}}
                                <img src="/avatar.png" class="avatar" alt="user profile picture">
                        {{/if}}
                    </div>
                    <div class="card-body">
                        <h5 class="cards-title">{{user.name}}</h5>
                        <p class="card-text">Welcome back. You can register complaints now.</p>
                        <a href="#" class="btn btn-primary">{{user.email}}</a>
                    </div>
                </div>
            </div>

            <div class="col-8">
                <div class="card text-center">
                    <div class="card-header">
                        profile Page
                    </div>
                    <div class="card-body">
                        <div class="card-title">Hey {{user.name}} Welcome back!</div>
                        <p class="card-text">Click on add complaint to register a new complaint</p>
                        <a href="/registercomplaint" class="btn btn-primary">Register Complaint</a>
                    </div>
                    <div class="card-footer text-muted">
                        Karnataka Police Dept.
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4 mb-2">
                    <a href="/registercomplaint" type="button" class="btn btn-primary">+ Add Complaint</a>
                </div>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                        <th scope="col">No.</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Place</th>
                        <th scope="col">Date</th>
                        <th scope="col">Verification</th>
                        <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if rows}}
                        {{#each rows}}
                        <tr>
                        <th scope="row">{{this.complaint_no}}</th>
                        <td>{{this.first_name}}</td>
                        <td>{{this.last_name}}</td>
                        <td>{{this.place}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.verify}}</td>
                         <td class="text-end">
                            {{!-- <a href="/viewcomplaint/{{this.complaint_no}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a> --}}
                            <a href="/editcomplaint/{{this.complaint_no}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
                            <a href="/deletecomplaint/{{this.complaint_no}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
                        </td>
                        </tr>
                        {{/each}}

                        {{else}}
                        <h6 class="alert alert-info mt-4">You have not registered any complaints</h6>
                        {{/if}}
                    </tbody>
                </table>

            </div>
        </div>
        

    </div>

