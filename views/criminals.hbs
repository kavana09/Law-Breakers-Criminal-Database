{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{removedUser}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6" style="color: #fff"><h1>Criminals</h1></div>
  <div class="col-6 d-flex justify-content-end">
    {{!-- <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ add user</a> --}}
  </div>
</div>

<table class="table table-bordered">
  <thead class="thread-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Place</th>
      <th scope="col">Date</th>
      <th scope="col">Height</th>
      <th scope="col">Weight</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.criminal_id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.place}}</td>
      <td>{{this.date}}</td>
      <td>{{this.height}}</td>
      <td>{{this.weight}}</td>
      {{!-- <td class="text-end">
        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
      </td> --}}
    </tr>
    {{/each}}
    
  </tbody>
</table>